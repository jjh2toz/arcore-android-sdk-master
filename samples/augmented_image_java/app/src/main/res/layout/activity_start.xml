<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.google.ar.core.examples.java.StartActivity"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/tv_ar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AR 실행하기"
        android:textColor="@android:color/black"
        android:textSize="27dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.197" />

    <Button
        android:id="@+id/btn_ar1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/btn_black"
        android:text="test01.jpg 쓰리디(모서리프레임)"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_ar2"
        android:layout_margin="15dp"/>

    <Button
        android:id="@+id/btn_ar2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/btn_black"
        android:text="test02.jpg 쓰리디(원형미로)"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_ar3"
        android:layout_margin="15dp"/>

    <Button
        android:id="@+id/btn_ar3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/btn_black"
        android:text="사자나오기"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="15dp"/>

    <EditText
        android:background="@drawable/ic_launcher_background"
        android:id="@+id/editTextTextPersonName"
        android:layout_width="275dp"
        android:layout_height="157dp"
        android:ems="10"
        android:textColor="#000000"
        android:inputType="textPersonName"
        android:text="Name"
        app:layout_constraintBottom_toTopOf="@+id/btn_ar1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_ar" />

    <com.facebook.share.widget.ShareButton
        android:id="@+id/fb_share_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintBottom_toTopOf="@+id/editTextTextPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.795"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_ar"
        app:layout_constraintVertical_bias="0.552" />

    <Button
        android:id="@+id/shareButton_insta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="인스타버튼"
        app:layout_constraintBottom_toTopOf="@+id/editTextTextPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_ar" />


</androidx.constraintlayout.widget.ConstraintLayout>
